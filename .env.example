# Server Configuration
API_PORT=8080
WORKER_ENABLED=true

# API Security
# Backend API key — all /v1 endpoints require this key via X-API-Key or Authorization: Bearer <key>
# Leave empty to disable auth (dev mode only!)
BACKEND_API_KEY=your-secret-api-key-here

# Comma-separated list of allowed CORS origins (empty = allow all, dev mode)
# Example: https://yourapp.com,https://admin.yourapp.com
# CORS_ALLOWED_ORIGINS=https://yourapp.com

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/faceless?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_STORAGE_BUCKET=faceless-videos

# OpenAI (used for text planning)
OPENAI_API_KEY=your-openai-key

# Gemini (used for image generation)
GEMINI_API_KEY=your-gemini-key
# Optional: path to style reference image (default: assets/style-reference/sample.jpeg)
# GEMINI_STYLE_REFERENCE_IMAGE=assets/style-reference/sample.jpeg

# Veo 3.1 (Legacy AI video generation from still images)
# When enabled, clips get AI-generated video instead of Ken Burns motion effects.
# Uses the same GEMINI_API_KEY — no additional key needed.
# VEO_ENABLED=true
# VEO_MODEL=veo-3.1-generate-preview

# xAI Grok Imagine Video (preferred AI video generation)
# When enabled, clips get AI-generated video via xAI's Grok Imagine Video model.
# Takes priority over Veo when both are enabled.
# XAI_VIDEO_ENABLED=true
# XAI_API_KEY=your-xai-api-key

# ElevenLabs (preferred TTS provider)
# When set, ElevenLabs is used for text-to-speech. Falls back to Cartesia if not set.
# Model: eleven_flash_v2_5 (Flash v2.5 — fast, 32 languages)
ELEVENLABS_API_KEY=your-elevenlabs-key
# Optional: Set a specific voice ID (default: pNInz6obpgDQGcFmaJgB)
# ELEVENLABS_VOICE_ID=pNInz6obpgDQGcFmaJgB

# Cartesia (legacy TTS provider — used only when ELEVENLABS_API_KEY is not set)
# CARTESIA_API_KEY=your-cartesia-key
# CARTESIA_API_URL=https://api.cartesia.ai
# CARTESIA_VOICE_ID=a0e99841-438c-4a64-b679-ae501e7d6091

# Background Music
# Optional: path to background music file mixed into the final video (default: assets/music/music.mp3)
# Music loops if shorter than the video and ends when the video ends.
# Set to empty string to disable background music.
# BACKGROUND_MUSIC_PATH=assets/music/music.mp3

# Worker Configuration
MAX_CONCURRENT_JOBS=5
